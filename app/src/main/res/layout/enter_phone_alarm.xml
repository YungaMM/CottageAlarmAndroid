<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_phone_alarm"
                android:id="@+id/text_phone_alarm" android:layout_marginLeft="11dp"
                android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginStart="11dp"/>
        <EditText
                android:id="@+id/value_phone_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" android:layout_marginLeft="8dp"
                android:layout_alignParentTop="true" android:layout_toRightOf="@+id/text_phone_alarm"
                android:layout_marginStart="8dp"/>
    </RelativeLayout>
</LinearLayout>